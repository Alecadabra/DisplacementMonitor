<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android.activity.MainActivity">

    <LinearLayout
        android:id="@+id/mainActivityLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/mainActivitySettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="32dp" />

        <Button
            android:id="@+id/mainActivityCalibrateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calibrate" />

        <Button
            android:id="@+id/mainActivityTestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test measurements" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="32dp" />

        <Button
            android:id="@+id/mainActivityScheduleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule" />

        <Button
            android:id="@+id/mainActivityCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop scheduling" />

        <Button
            android:id="@+id/mainActivityMeasurementButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take single measurement" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="32dp" />

        <TextView
            android:id="@+id/mainActivityData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="32dp" />

        <Button
            android:id="@+id/mainActivityClearDataButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete all data" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
